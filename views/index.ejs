<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register | Create Account</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
    }
  </style>
</head>
<body class="text-white min-h-screen flex items-center justify-center px-4">

  <div class="w-full max-w-lg bg-zinc-900 border border-zinc-800 shadow-xl rounded-2xl p-8">
    
    <!-- Heading -->
    <h2 class="text-3xl font-bold mb-1 text-center text-zinc-100">Create an Account ðŸš€</h2>
    <p class="text-sm text-zinc-500 text-center mb-8">Join us and start posting today</p>
    
    <!-- Form -->
    <form action="/register" method="post" class="space-y-5">

      <!-- Name -->
      <div>
        <label for="name" class="block text-sm text-zinc-400 mb-1">Full Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          placeholder="John Doe"
          required
          class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-md placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Username -->
      <div>
        <label for="username" class="block text-sm text-zinc-400 mb-1">Username</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          placeholder="johndoe123"
          required
          class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-md placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Age -->
      <div>
        <label for="age" class="block text-sm text-zinc-400 mb-1">Age</label>
        <input 
          type="number" 
          id="age" 
          name="age" 
          placeholder="18"
          min="0"
          required
          class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-md placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm text-zinc-400 mb-1">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          placeholder="you@example.com"
          required
          class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-md placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-sm text-zinc-400 mb-1">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
          required
          class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-md placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Submit -->
      <div>
        <input 
          type="submit" 
          value="Create Account" 
          class="w-full bg-blue-600 hover:bg-blue-700 transition text-sm font-medium py-2 px-4 rounded-md shadow-md cursor-pointer"
        />
      </div>
    </form>

    <!-- Optional: Link to Login -->
    <div class="mt-6 text-center text-sm text-zinc-500">
      Already have an account? 
      <a href="/login" class="text-blue-500 hover:underline">Login</a>
    </div>
  </div>

</body>
</html>
